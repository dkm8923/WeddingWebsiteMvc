
@{
    ViewBag.Title = "Website Maintenance";
}

<div id="websiteMaintenanceContainer" class="maintenanceContainer">
    <div class="form-horizontal divWebsiteMaintenanceForm">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Website Maintenance</h3>
            </div>
            <div class="panel-body">
                <div class="col-md-10 col-md-offset-1">
                    <div class="form-group">
                        <div id="divErrorMsgContainer" class="hidden"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="taGroomDesc">Groom Description: <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                        <div class="col-md-8">
                            <textarea id="taGroomDesc"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="taBrideDesc">Bride Description: <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                        <div class="col-md-8">
                            <textarea id="taBrideDesc"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="taCeremonyDateTimeLoc">Ceremony Date / Time / Location: <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                        <div class="col-md-8">
                            <textarea id="taCeremonyDateTimeLoc"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="taCeremonyDesc">Ceremony Description: <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                        <div class="col-md-8">
                            <textarea id="taCeremonyDesc"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="taReceptionDateTimeLoc">Reception Date / Time / Location: <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                        <div class="col-md-8">
                            <textarea id="taReceptionDateTimeLoc"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="taReceptionDesc">Reception Description: <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                        <div class="col-md-8">
                            <textarea id="taCeremonyDesc"></textarea>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="pull-right">
                            <button class="btn btn-danger btnIcon" id="btnCancel"><i class="fa fa-times" aria-hidden="true"></i>Cancel</button>
                            <button class="btn btn-success btnIcon" id="btnSubmit"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
